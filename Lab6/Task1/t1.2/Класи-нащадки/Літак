public class Plane extends Carrier {

    public Plane(String name, int capacity, double pricePerUnit) {
        super(name, capacity, pricePerUnit);
    }

    @Override
    public void showInfo() {
        System.out.println("Plane: " + getName() +
                ", capacity=" + getCapacity() +
                ", price/unit=" + getPricePerUnit() +
                ", trip cost=" + calculateTripCost());
    }
}
