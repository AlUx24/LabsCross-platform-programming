public class Book {
private int id;
private String title;
private String authors; // рядок з авторами
private String publisher;
private int year;
private int pages;
private double price;
private String cover; // "тверда"/"м'яка" — це поле типу


public Book(int id, String title, String authors, String publisher,
int year, int pages, double price, String cover) {
this.id = id;
this.title = title;
this.authors = authors;
this.publisher = publisher;
this.year = year;
this.pages = pages;
this.price = price;
this.cover = cover;
}


public int getId() { return id; }
public String getTitle() { return title; }
public String getAuthors() { return authors; }
public String getPublisher() { return publisher; }
public int getYear() { return year; }
public int getPages() { return pages; }
public double getPrice() { return price; }


public String getType() { return cover; } // getТип
public void setType(String cover) { this.cover = cover; } // setТип


@Override
public String toString() {
return String.format("%d: '%s' by %s, %s, %d, %d стор., %.2f грн, обкладинка=%s",
id, title, authors, publisher, year, pages, price, cover);
}
}
