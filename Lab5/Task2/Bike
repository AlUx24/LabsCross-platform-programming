package com.example.transport.model;

public class Bike extends Vehicle {
    private boolean hasEngine;

    public Bike(String brand, int year, boolean hasEngine) {
        super(brand, year);
        this.hasEngine = hasEngine;
    }

    @Override
    public void showInfo() {
        System.out.println("Bike: " + getBrand() + ", year: " + getYear() +
                ", engine: " + (hasEngine ? "yes" : "no"));
    }
}
